{
    "name": "ahmadmunib/framework1",
    "description": "A lightweight PHP framework with Laravel-like features including CLI tools",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Ahmad Munib"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "Framework\\": "framework/"
        },
        "files": [
            "framework/Helpers/helpers.php"
        ]
    },
    "bin": [
        "fx"
    ],
    "keywords": [
        "framework",
        "php",
        "cli",
        "laravel-like"
    ],
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "scripts": {
        "test": "phpunit",
        "post-install-cmd": [
            "@php -r \"@mkdir('storage/logs', 0775, true); @mkdir('storage/cache', 0775, true); @mkdir('storage/uploads', 0775, true);\""
        ],
        "post-update-cmd": [
            "@php -r \"@mkdir('storage/logs', 0775, true); @mkdir('storage/cache', 0775, true); @mkdir('storage/uploads', 0775, true);\""
        ]
    }
}